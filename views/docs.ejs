<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
        }
        th {
            background-color: #f4f4f4;
        }
        code {
            background-color: #f9f9f9;
            padding: 2px 4px;
            border-radius: 4px;
            font-size: 90%;
        }
        .table-wrapper{
            overflow-x: scroll;
            padding-bottom: 40px;
        }
        .header-wrapper{
            display: flex;
            height: 100%;
            align-items: center;
        }
        .backIcon{
            margin-right: 10px;
            padding-left: 6px;
            padding-right: 6px;
        }
        .backIcon:hover{
            background-color: #f4f4f4;
            border-radius: 100%;
        }
        a{
            color: black    ;
        }
    </style>
</head>
<body>
    <div class="header-wrapper">
        <a href="/">
            <svg class="backIcon" xmlns="http://www.w3.org/2000/svg" width="12" height="24" viewBox="0 0 12 24"><path fill="currentColor" fill-rule="evenodd" d="m3.343 12l7.071 7.071L9 20.485l-7.778-7.778a1 1 0 0 1 0-1.414L9 3.515l1.414 1.414z"/></svg>    
        </a>
        <h1><%= title %></h1>    
    </div>
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Method</th>
                    <th>Endpoint</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% apis.forEach(api => { %>
                    <tr>
                        <td><strong><%= api.method %></strong></td>
                        <td><code><%= api.endpoint %></code></td>
                        <td><%= api.description %></td>
                    </tr>
                    <% if (api.example) { %>
                        <tr>
                            <td colspan="3">
                                <strong>Example Request:</strong>
                                <pre><code><%= api.example %></code></pre>
                            </td>
                        </tr>
                    <% } %>
                <% }); %>
            </tbody>
        </table>    
    </div>
</body>
</html>
